{% extends 'base/base.html' %}
{% load crispy_forms_tags %}

{% block title %}{{ SITE_TITLE }} - Contact{% endblock %}

{% block content %}
<div class="row">
    <div class="col-md-8 mx-auto">
        <h1 class="mb-4">Contact Me</h1>
        
        {% if messages %}
            {% for message in messages %}
                <div class="alert alert-{{ message.tags }}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endif %}
        
        <div class="card">
            <div class="card-body">
                <h5 class="card-title mb-4">Send me a message</h5>
                {% crispy form %}
            </div>
        </div>
        
        <div class="mt-5">
            <h3>Contact Information</h3>
            <hr>
            <ul class="list-unstyled">
                {% if site.email %}
                    <li class="mb-3">
                        <i class="fas fa-envelope me-2"></i> <a href="mailto:{{ site.email }}">{{ site.email }}</a>
                    </li>
                {% endif %}
                
                {% if site.phone %}
                    <li class="mb-3">
                        <i class="fas fa-phone me-2"></i> {{ site.phone }}
                    </li>
                {% endif %}
                
                {% if site.address %}
                    <li class="mb-3">
                        <i class="fas fa-map-marker-alt me-2"></i> {{ site.address }}
                    </li>
                {% endif %}
            </ul>
            
            <div class="mt-4">
                {% if site.github_url %}
                    <a href="{{ site.github_url }}" target="_blank" rel="noopener noreferrer" class="btn btn-outline-dark me-2">
                        <i class="fab fa-github"></i> GitHub
                    </a>
                {% endif %}
                
                {% if site.linkedin_url %}
                    <a href="{{ site.linkedin_url }}" target="_blank" rel="noopener noreferrer" class="btn btn-outline-primary me-2">
                        <i class="fab fa-linkedin"></i> LinkedIn
                    </a>
                {% endif %}
                
                {% if site.bluesky_url %}
                    <a href="{{ site.bluesky_url }}" target="_blank" rel="noopener noreferrer" class="btn btn-outline-info me-2">
                        <i class="fa-solid fa-cloud bluesky-icon"></i> Bluesky
                    </a>
                {% endif %}
            </div>
        </div>
    </div>
</div>
{% endblock %}